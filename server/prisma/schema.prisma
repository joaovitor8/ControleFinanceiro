
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Users {
  id        String   @id
  email     String   @unique
  name      String?
  passwords String[]
}

model roles {
  id        Int      @id
  name      String   @unique
  description String?
}

model user_roles {
  userId    String
  roleId    Int

  @@unique([userId, roleId])
}

model assinaturas {
  id          Int      @id
  name        String
  description String?
}

model contasPagar {
  id          Int      @id
  description String
}
