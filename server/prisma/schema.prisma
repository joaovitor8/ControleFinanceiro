
generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id // Será o ID do Clerk (ex: user_2b3...)
  email     String   @unique
  name      String?
  transactions Transaction[]
  createdAt DateTime @default(now())
}

model Transaction {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  title       String
  amount      Decimal  // Use Decimal para dinheiro!
  type        String   // "INCOME" (Ganho) ou "EXPENSE" (Gasto)
  category    String   // "Alimentação", "Assinatura", "Salário"
  isRecurring Boolean  @default(false) // Para assinaturas
  date        DateTime
  createdAt   DateTime @default(now())
}
