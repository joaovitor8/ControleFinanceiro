
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ---------------------------------------------

// Usuários
model User {
  id        String   @id 
  email     String   @unique
  name      String?
  
  createdAt DateTime @default(now())

  // Relacionamento original (RBAC)
  userRoles UserRole[] 

  // Adicionamos a conexão com as suas tabelas financeiras
  // Sem isso, você não saberia de quem é a conta ou assinatura
  subscriptions   Subscription[]
  accountsPayable AccountsPayable[]

  @@map("users")
}

// Papéis
model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique
  description String?

  userRoles   UserRole[]

  @@map("roles")
}

// Tabela Pivô
model UserRole {
  userId String
  roleId Int

  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
  @@map("user_roles")
}

// ---------------------------------------------

// Assinaturas
model Subscription {
  id          Int     @id @default(autoincrement())
  name        String
  description String?
  
  // Sugestão importante: Adicione 'price' para a IA poder calcular gastos depois
  price       Decimal? @db.Decimal(10, 2) 

  // Agora sabemos a quem pertence essa assinatura
  userId      String
  user        User    @relation(fields: [userId], references: [id])

  @@map("assinaturas")
}

// Contas a Pagar
model AccountsPayable {
  id          Int      @id @default(autoincrement())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  dueDate     DateTime
  isPaid      Boolean  @default(false)

  // Agora sabemos a quem pertence essa conta
  userId      String
  user        User     @relation(fields: [userId], references: [id])

  @@map("contas_pagar")
}
